{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "name": "quiktrak",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently -n api,web -c cyan,magenta \"npm --workspace @quiktrak/api run dev\" \"npm --workspace @quiktrak/web run dev\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc -b --pretty false",
    "test": "echo \"Run npm run test:api and npm run test:web\"",
    "test:api": "npm --workspace @quiktrak/api run test",
    "test:web": "npm --workspace @quiktrak/web run test",
    "build:web": "npm --workspace @quiktrak/web run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.20.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0"
  }
}